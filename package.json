{
  "name": "coke-famer",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "preview": "vite preview",
    "sync-assets": "node scripts/sync-ga-assets.mjs",
    "fetch-assets": "node scripts/fetch-ga-assets.mjs",
    "e2e": "npm run sync-assets && npm run build && NO_PROXY=127.0.0.1,localhost no_proxy=127.0.0.1,localhost playwright test",
    "preview:daemon": "node scripts/preview-daemon.mjs start",
    "preview:stop": "node scripts/preview-daemon.mjs stop",
    "preview:status": "node scripts/preview-daemon.mjs status",
    "shots": "npm run sync-assets && npm run build && node scripts/capture-screenshots.mjs"
  },
  "dependencies": {
    "phaser": "^3.90.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "typescript": "^5.8.2",
    "vite": "^6.1.0"
  }
}
